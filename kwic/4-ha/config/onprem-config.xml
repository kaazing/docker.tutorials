<?xml version="1.0" encoding="UTF-8" ?>
<gateway-config xmlns="http://xmlns.kaazing.org/2016/06/gateway">


  <service>
    <name>proxy service A from cloud1</name>

    <accept>pipe://serviceA-cloud1.example.com</accept>
    <connect>tcp://server-a:5551</connect>

    <type>proxy</type>

    <accept-options>
      <pipe.transport>socks://cloud1.example.com</pipe.transport>
      <socks.mode>reverse</socks.mode>
      <socks.transport>wsn+ssl://cloud1.example.com/kwic</socks.transport>
      <ws.inactivity.timeout>55 seconds</ws.inactivity.timeout>
    </accept-options>
  </service>


  <service>
    <name>proxy service A from cloud2</name>

    <accept>pipe://serviceA-cloud2.example.com</accept>
    <connect>tcp://server-a:5551</connect>

    <type>proxy</type>

    <accept-options>
      <pipe.transport>socks://cloud2.example.com</pipe.transport>
      <socks.mode>reverse</socks.mode>
      <socks.transport>wsn+ssl://cloud2.example.com/kwic</socks.transport>
      <ws.inactivity.timeout>55 seconds</ws.inactivity.timeout>
    </accept-options>
  </service>


  <service>
    <name>proxy service B</name>

    <accept>tcp://@eth0:6661</accept>
    <connect>wsn+ssl://example.com:443/serviceB</connect>

    <type>proxy</type>

    <connect-options>
      <http.maximum.redirects>3</http.maximum.redirects>
      <ws.inactivity.timeout>55 seconds</ws.inactivity.timeout>
    </connect-options>
  </service>


  <security>

    <keystore>
      <type>JCEKS</type>
      <file>/x509/stores/keystore-onprem.jceks</file>
      <password-file>/x509/stores/keystore-onprem.pw</password-file>
    </keystore>

    <truststore>
      <type>JCEKS</type>
      <file>/x509/stores/truststore-onprem.jceks</file>
      <password-file>/x509/stores/truststore-onprem.pw</password-file>
    </truststore>

  </security>


</gateway-config>
